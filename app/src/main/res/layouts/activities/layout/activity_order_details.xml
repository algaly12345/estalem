<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.OrderDetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDarkProvider">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@string/order_details"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgBack"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="center"
                        android:src="@drawable/left_arrow"
                        android:tint="@color/white" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10sp"
                android:orientation="vertical"
                android:layout_marginBottom="13dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/order_number"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="344"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:card_vew="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_marginTop="5dp"
                android:layout_margin="15dp"
                card_vew:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="15dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/amount_paid"
                        android:textAllCaps="false"
                        android:textColor="#3949AB"
                        android:textSize="15sp"

                        />

                    <TextView
                        android:id="@+id/txtAmountPaid"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="50"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp"

                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:card_vew="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_marginTop="5dp"
                android:layout_margin="15dp"
                card_vew:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="15dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/typepyemt"
                        android:textAllCaps="false"
                        android:textColor="#3949AB"
                        android:textSize="15sp"

                        />

                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/txtPaymenttype"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="50"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp"

                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:card_vew="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_marginTop="5dp"
                android:layout_margin="15dp"
                card_vew:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/date"
                        android:textAllCaps="false"
                        android:textColor="#3949AB"
                        android:textSize="15sp"

                        />

                    <TextView

                        android:layout_width="0dp"
                        android:id="@+id/txtDatetimeNow"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="50"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp"

                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:card_vew="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_marginTop="5dp"
                android:layout_margin="15dp"
                card_vew:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/name_customer"
                        android:textAllCaps="false"
                        android:textColor="#3949AB"
                        android:textSize="15sp"

                        />

                    <TextView
                        android:id="@+id/txtnamecustomer"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="50"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp"

                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:card_vew="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_marginTop="5dp"
                android:layout_margin="15dp"
                card_vew:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"
                    android:layout_margin="15dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/order_decription"
                        android:textAllCaps="false"
                        android:textColor="#3949AB"
                        android:textSize="15sp"

                        />

                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/txtorderDecreption"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="50"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp"

                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:card_vew="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_marginTop="5dp"
                android:layout_margin="15dp"
                card_vew:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"
                    android:layout_margin="15dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/txtLoctionDescrption"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/location_decrption"
                        android:textAllCaps="false"
                        android:textColor="#3949AB"
                        android:textSize="15sp"

                        />

                    <TextView

                        android:id="@+id/txtORderLoction"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="50"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp"

                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/btn_ended"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="@string/ended"
                    android:background="@drawable/button_r"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp"

                    />

                <Button
                    android:id="@+id/btnOrder_wite"
                    android:layout_margin="1dp"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/order_wite"
                    android:background="@drawable/button_r"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_margin="1dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/btn_cancel_from_client"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="@string/cancel_from_proiver"
                    android:background="@drawable/button_r"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="11sp"

                    />

                <Button
                    android:id="@+id/btn_caneceledprovider"
                    android:layout_margin="1dp"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/caneceledprovider"
                    android:background="@drawable/button_r"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="11sp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/btn_attendord"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:text="@string/attendord"
                    android:background="@drawable/button_r"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp"

                    />

                <Button
                    android:id="@+id/btn_order_in_road"
                    android:layout_margin="1dp"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/order_in_road"
                    android:background="@drawable/button_r"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp"

                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btn_ok_order"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginLeft="6dp"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:text="@string/ok_orderd"
                    android:background="@drawable/button_r"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
