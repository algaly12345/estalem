<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Provider.ReceiveProviderOrderActivity">

    <fragment
        android:id="@+id/map0"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.labs.buttercell.forth.driver.DriverMap" >
        <LinearLayout
            android:id="@+id/layout_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_above="@id/card2">

            </LinearLayout>

        </LinearLayout>
    </fragment>


    <LinearLayout
        android:id="@+id/card2"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rediuce_diload"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-1dp" >


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="100sp"
                android:layout_gravity="center"
                android:layout_height="3dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10sp"
                android:background="@color/colorPrimaryDarkProvider"
                android:gravity="center"
                android:orientation="horizontal" />


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/imgClientImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="20sp"
                    android:src="@drawable/avtar"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10sp"
                    android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvLocationOrderDescription"
                    android:layout_width="match_parent"
                    android:layout_marginTop="11dp"
                    android:layout_margin="12dp"
                    android:layout_height="wrap_content"
                    android:text=""/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="10sp"
                        android:gravity="center"
                        android:layout_height="wrap_content">


                        <Button
                            android:id="@+id/btnDistance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10sp"
                            android:layout_marginLeft="10sp"
                            android:textColor="@color/white"
                            android:background="@drawable/provider_backgroud"
                            android:text=""/>

                        <Button
                            android:id="@+id/btnProviderDistance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10sp"
                            android:layout_marginLeft="10sp"
                            android:textColor="@color/white"
                            android:background="@drawable/provider_backgroud"
                            android:text=""/>

                    </LinearLayout>


                </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10sp"
                   android:gravity="center"

                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"


                        android:background="@drawable/backgroud_shpe_provider"

                        android:layout_height="40dp"
                        android:paddingLeft="15dp">


                        <EditText
                            android:id="@+id/txtPrice"
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:layout_height="match_parent"
                            android:background="@drawable/circular_borderbutton"
                            android:drawableTint="@color/white"
                            android:gravity="center"
                            android:hint="@string/enter_delivery_price"
                            android:inputType="numberDecimal"
                            android:textColor="@color/colorPrimaryDark"
                            android:textColorHint="@color/white" />

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:background="@color/colorWhite" />

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:text="@string/currency"
                            android:textStyle="bold"
                            android:background="@drawable/backgroud_shpe_provider"


                            tools:ignore="VectorDrawableCompat" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/otherLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnReject"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/button_re_gre"
                    android:text="@string/reject"
                    android:layout_margin="15dp"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnSendPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/button_re_pre"
                    android:text="@string/send"
                    android:layout_margin="15dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>

