<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView xmlns:card_vew="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        card_vew:cardBackgroundColor="@color/secondary"
        card_vew:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/red"
                android:textSize="@dimen/large"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/TV_errorMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="5dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="@string/dialog_details"
                android:textColor="@color/black"
                android:textSize="@dimen/small" />
            <Button
                android:id="@+id/Btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/button_re_pre"
                android:text="@string/ok"
                android:layout_marginBottom="15dp"
                android:textColor="@color/white"
                android:textSize="@dimen/small" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>